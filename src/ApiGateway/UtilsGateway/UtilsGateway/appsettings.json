{
    "ReverseProxy": {
        "Routes": {
            "usersRoute": {
                "ClusterId": "usersCluster",
                "Match": { "Path": "/api/users/{**catch-all}" },
                "Transforms": [
                    { "PathRemovePrefix": "/api" }
                ]
            },
            "authRoute": {
                "ClusterId": "authCluster",
                "Match": { "Path": "/api/auth/{**catch-all}" },
                "Transforms": [
                    { "PathRemovePrefix": "/api" }
                ]
            }
        },

        "Clusters": {
            "usersCluster": {
                "Destinations": {
                    "usersApi": { "Address": "http://utilityhub-users:8080" }
                }
            },
            "authCluster": {
                "Destinations": {
                    "authApi": { "Address": "http://utilityhub-auth:8080" }
                }
            }
        }
    }
}
